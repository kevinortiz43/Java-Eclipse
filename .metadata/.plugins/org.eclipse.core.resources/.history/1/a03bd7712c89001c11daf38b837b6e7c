package calculator;
import java.util.Scanner;

public class HWCalculator {

	static double num1,num2, result;
	static Scanner scan = new Scanner(System.in);
	
	static double add(double x, double y) {
		double result= x+y; 
		return result;
	}
	
	static double subtract(double x, double y) {
		double result= x-y; 
		return result;
	}
	static double division(double x, double y) {
		double result= x/y; 
		return result;
	}
	static double multiplication(double x, double y) {
		double result= x*y; 
		return result;
	}
	
	
	public static void main(String[] args) {
		
		System.out.println("1 for addition");
		System.out.println("2 for subtraction");
		System.out.println("3 for division");
		System.out.println("4 for multiplication");
		System.out.println("5 to exit");
		
		int Selection = scan.nextInt();
		
		System.out.println("Enter your first number");
		int userNumber1 = scan.nextInt();
		
		
		System.out.println("Enter your second number");
		int userNumber2= scan.nextInt();
		
		switch (Selection) {
		case 1:
			
			result = add(userNumber1, userNumber2);
			System.out.println(result);

		case 2:
			result = subtract(userNumber1, userNumber2);
			System.out.println(result);
		
		case 3:
			result = multiplication(userNumber1, userNumber2);
		System.out.println(result);
		
		case 4:
			division(userNumber1, userNumber2);
			System.out.println(result);
			
		case 5:
			System.exit(0);
			
			default:
				System.out.println("Please enter only 1-5");
		}
		
		
		
	}
	
	
//	create switch case for add, subtract, multiply, divide, and exit
//  take user input two numbers
//	each one will have a static method, it must take in two parameters, it must have a return
//  add +, sub, -, divide /, multiply *
//	exit will be System.exit(0)
//	at the end of each one;
//	if the user enters an option aside from 1-5 display a default message "invalid entry, try again"

}
